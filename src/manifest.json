{
    "manifest_version": 2,
    "name": "__MSG_APPNAME__",
    "short_name": "__MSG_APPNAME_SHORT__",
    "description": "__MSG_DESCRIPTION__",
    "version": "1.6.5",
    "author": "thib3113 <thib3113@gmail.com>",
    "minimum_chrome_version": "50.0",
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "default_locale": "fr",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "__MSG_APPNAME__"
    },
    "background": 
    {
        "scripts": [
            "class/WebExtension.inc.js",
            "class/FirefoxExtension.inc.js",
            "class/ChromeExtension.inc.js",
            "class/Settings.inc.js",
            "class/Imgur.inc.js",
            "class/Dealabs.inc.js",
            "third/async.min.js",
            "third/jquery.min.js",
            "third/noty/jquery.noty.packaged.min.js",
            "global.js",
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "*"
    ],
    "permissions": [
        "notifications",
        "storage",
        "activeTab",
        "contextMenus",
        "webRequest",
        "*://*.dealabs.com/*",
        "https://thib3113.github.io/dealabs-extension/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.dealabs.com/*",
                "https://thib3113.github.io/dealabs-extension/*"
            ],
            "exclude_matches": [
                "*://*.dealabs.com/*.pdf",
                "*://*.dealabs.com/*.rss",
                "*://*.dealabs.com/*.xml",
                "*://*.dealabs.com/*.css",
                "*://*.dealabs.com/*.js"
            ],
            "js": [            
                "class/WebExtension.inc.js",
                "class/FirefoxExtension.inc.js",
                "class/ChromeExtension.inc.js",
                "class/Settings.inc.js",
                "class/Imgur.inc.js",
                "class/Dealabs.inc.js",
                "class/Embed.inc.js",
                "third/jquery.min.js",
                "third/noty/jquery.noty.packaged.min.js",
                "global.js",
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_start"
        }
    ]
}